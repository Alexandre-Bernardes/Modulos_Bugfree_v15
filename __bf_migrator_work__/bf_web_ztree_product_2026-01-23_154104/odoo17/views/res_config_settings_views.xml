<odoo>
    <record id="view_res_config_settings_bf_web_ztree_product" model="ir.ui.view">
        <field name="name">res.config.settings.bf_web_ztree_product</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-key="bf_web_ztree_product">
                    <h2>Bugfree zTree Widget - Product</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="bf_ztree_product_enabled"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="bf_ztree_product_enabled"/>
                                <div class="text-muted">Enable/disable automatic zTree widget injection for this target module.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
